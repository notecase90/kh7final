<?xml version="1.0" encoding="UTF-8" ?>

<!-- mybatis 설정파일 -->

<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
	<!-- mybatis 운영방침과 관련된 설정 작성 -->
	<settings>
		<setting name="cacheEnabled" value="true"/>
		<setting name="lazyLoadingEnabled" value="true"/>
		<!-- 필수설정 : 자바 변수명과 데이터베이스 컬럼명을 자동 매핑 변환 처리 설정 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
<!-- 	
	 mybatis 클래스 별칭 설정 체크체크 
	<typeAlias name="클래스 경로" alias="별칭"/>
	<package name="패키지 경로"/> 
	-->
	
	<!-- 데이터베이스 환경 설정 -->
	<environments default="development">
		
		<environment id="development">
		
			<!-- 데이터베이스 커밋/롤백을 자동으로 수행 -->
			<transactionManager type="JDBC"></transactionManager>
			
			<!-- 데이터베이스 연결정보 설정 -->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="study"/>
				<property name="password" value="study"/>
			</dataSource>
		
		</environment>
		
		<!-- 
		<environment id="deploy"></environment>
		-->
		 
	</environments>
	
	<!-- 
		매퍼 설정 : 구문을 가지고 있는 매퍼 파일들을 등록
	-->
	<mappers>
<!-- 		체크체크<mapper resource="mybatis/mapper/item-mapper.xml"/> 체크체크 -->

	</mappers>
	
</configuration>


